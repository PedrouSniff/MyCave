<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {{ encore_entry_link_tags('app') }}
        {# {{ encore_entry_script_tags('app') }} #}
        
    </head>
    <body>
        {% block header %}
        <header id="header">

            {# Logo #}
            <a href="{{path('app_home')}}"><img src={{asset('images/logo-large-white.png')}} alt=""></a>

            {# NavBar #}
            <nav>
                <ul>
                    <li><a class="{% if app.request.attributes.get('_route') == 'app_home' %} active {% endif %}" href={{ path('app_home')}}>Accueil</a></li>
                    <li><a class="{% if app.request.attributes.get('_route') == 'app_caves' %} active {% endif %}" href={{ path('app_caves')}}>Caves</a></li>
                    <li><a class="{% if app.request.attributes.get('_route') == 'app_vins' %} active {% endif %}" href={{ path('app_vins')}}>Vins</a></li>
                    <li><a class="{% if app.request.attributes.get('_route') == 'app_presentation' %} active {% endif %}" href={{ path('app_presentation')}}>Présentation</a></li>
                    <li><a class="{% if app.request.attributes.get('_route') == 'app_contact' %} active {% endif %}" href={{ path('app_contact')}}>Contact</a></li>
                </ul>
            </nav>
            
            {# Profil #}
            <div class="profil">
                {% if app.user == null %}
                    <li><a class="{% if app.request.attributes.get('_route') == 'app_inscription' %} active {% endif %}" href={{ path('app_inscription')}}>Inscription</a></li>
                    <li><a class="{% if app.request.attributes.get('_route') == 'app_login' %} active {% endif %}" href={{ path('app_login')}}>Connexion</a></li>
                    <a href={{ path('app_login')}}><i class="fa-solid fa-user"></i></a>
                {% endif %}

                {% if is_granted('ROLE_USER') %}
                    <li><a class="{% if app.request.attributes.get('_route') == 'app_logout' %} active {% endif %}" href={{ path('app_logout')}}>Déconnexion</a></li>
                    <a href={{ path('app_profil')}}><i class="fa-solid fa-user prof"></i></a>
                {% endif %}
            </div>
        </header>
        {% endblock %}

        {% block main %}{% endblock %}

        {% block footer %}
        <footer id="footer">

            {# Logo #}
            <a href="{{path('app_home')}}"><img src={{asset('images/logo-large-white.png')}} alt=""></a>
            
            {# Contact #}
            <div class="footer-contact">
                <a href={{ path('app_contact')}}>Nous contacter</a>
                <a href={{ path('app_contact')}}>XX XX XX XX XX</a>
            </div>

            {# Copyright #}
            <a class="copyright" href="">©Copyright mycave@gmail.com</a>

            {# Mentions Légales #}
            <div class="footer-contact">
                <a href={{ path('app_presentation')}}>À Propos</a>
                <a href={{ path('app_presentation')}}>Mentions Légales</a>
            </div>
            
            {# Réseaux Sociaux #}
            <ul class='social'>
                <li><a href={{ path('app_contact')}}><i class="fa-brands fa-twitter"></i></a></li>
                <li><a href={{ path('app_contact')}}><i class="fa-brands fa-instagram"></i></a></li>
                <li><a href={{ path('app_contact')}}><i class="fa-brands fa-youtube"></i></a></li>
            </ul>
        </footer>
        {% endblock %}
    </body>
</html>